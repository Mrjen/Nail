/* pages/Detile/Detile.wxss */
.product_img{
    width: 750rpx;
    height: 750rpx;
    display: block;
}

.title{
    display: block;
    width: 100%;
    height: 90rpx;
    background: rgba(0, 0, 0, .5);
    margin-top: -90rpx;
    color: #fff;
    line-height: 90rpx;
    text-overflow: hidden;
    white-space: nowrap;
    padding: 0 20rpx;
    font-size: 30rpx;
}

/* 价格 */
.price_box{
    display: flex;
    justify-content: space-between;
    padding:0 20rpx;
    position: relative;
}

.price_box view{
    height: 90rpx;
    line-height: 90rpx;
}

.price_box view.price{
    display: flex;
    align-items: baseline;
}

.price_box view.price text:nth-of-type(1){
    font-size:24rpx;
    color: #ff3333;
}

.price_box view.price text:nth-of-type(2){
    font-size:30rpx;
    color: #ff3333;
}

.price_box view.group text{
    font-size: 26rpx;
    color: #3a3a3a;
}

.tip_box{
    width: 100%;
    font-size: 26rpx;
    padding:20rpx;
    color: #ff3333;
    line-height: 36rpx;
}

.rule_box{
    width: 100%;
    border-top: 20rpx solid #f0f0f0;
    border-bottom:20rpx solid #f0f0f0;
    padding:0 20rpx;
    font-size: 30rpx;
}

.detail_nav{
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 20rpx;
    position: relative;
    display: flex;
    align-items: center;
}

.detail_nav::before{
    content: "";
    display: block;
    height: 26rpx;
    border-left: 2px solid #ff3333;
    margin-right: 14rpx;
}
