/* pages/SubmitOrder/SubmitOrder.wxss */
page{
    background: #f0f0f0;
}

.product_info{
    width: 100%;
    height: 170rpx;
    background: #fff;
    display: flex;
    padding-top: 20rpx;
    margin-bottom: 20rpx;
}

.product_info image{
    display: block;
    width: 120rpx;
    height: 120rpx;
    margin:20rpx;
    margin-top: 0;
    flex-shrink: 0;
}

.num_nav{
    width: 100%;
    height: 80rpx;
    padding:0 20rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
}

.num_nav view{
    line-height: 80rpx;
}

.num_nav .num_box{
    display: flex;
}

.num_nav .num_box .num_btn{
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    font-size: 40rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.num_nav .num_box view:nth-of-type(2){
    width: 80rpx;
    text-align: center;
}

.num_nav .num_box2{
    color: #ff3333;
}

.mobile_nav{
    width: 100%;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    padding:0 20rpx;
}

.nophone{
    width: 100%;
    height: 80rpx;
    background: #fff;
    line-height: 80rpx;
    font-size: 30rpx;
    padding:0 20rpx;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nophone::after{
    content: '';
    display: block;
    position: absolute;
    color: #999;
    right: 80rpx;
    top: 50%;
    margin-top: -5px;
    width: 10px;
    height: 10px;
    border-top: solid 1px currentColor;
    border-right: solid 1px currentColor;
    -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
}

.hasphone{
    width: 100%;
    height: 80rpx;
    background: #fff;
    line-height: 80rpx;
    padding:0 20rpx;
    display: flex;
    justify-content: space-between;
}

.hasphone view{
    line-height: 80rpx;
}

.editphone{
    font-size: 28rpx;
    color: #7acf38;
    line-height: 80rpx;
}