/* pages/coupon/coupon.wxss */

page {
    background: #333;
}

.coupon_item {
    width: 714rpx;
    height: 180rpx;
    background: #fff;
    margin: 10rpx auto;
    display: flex;
    justify-content: space-between;
    background: url('data:image/png;base64,');
    background-size: 100% 100%;
}

.coupon_item .cards_left {
    flex: 1;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
}

.coupon_item .cards_left image {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}

.coupon_item .cards_left .content {
    flex: 1;
    height: 180rpx;
    padding-left: 40rpx;
    padding-top: 30rpx;
}

.coupon_item .cards_right {
    width: 122rpx;
    height: 180rpx;
    background: #ff5c5c;
    background: url('data:image/png;base64,');
    background-size: 100% 100%;
}

.coupon_item .cards_left .content .discount,
.coupon_item .cards_left .content .reduced {
    width: 100%;
    height: 100%;
}

.coupon_item .cards_left .discount .content_top {
    display: flex;
}

.coupon_item .cards_left .discount .dis_icon {
    width: 40rpx;
    display: flex;
    align-items: flex-start;
    color: #ff3333;
}

.coupon_item .cards_left .discount .dis_num {
    font-size: 70rpx;
    color: #ff3333;
    margin-right: 10rpx;
}

.coupon_item .content_right {
    flex: 1;
}

.coupon_item .content_right view {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #333;
}

.coupon_item .cards_left .content_bottom{
	position: relative;
	display: flex;
	align-items: center;
	font-size: 24rpx;
	padding-top: 20rpx;
}

.coupon_item .content_bottom .clock{
	color: #999;
	display: inline-block;
    width: 25rpx;
    height: 25rpx;
    position: relative;
    border: solid 1px currentColor;
    border-radius: 8px;
    margin-right: 15rpx;
}

.clock:before{
  content: '';
  position: absolute;
  top: 12rpx;
  left: 11rpx;
  width: 10rpx;
  height: 1px;
  background-color: currentColor;
  -webkit-transform-origin: 0% 0%;
          transform-origin: 0% 0%;
}

.clock:after{
	content: '';
  position: absolute;
  top: 4rpx;
  left: 10rpx;
  width: 1px;
  height: 10rpx;
  background-color: currentColor;
  -webkit-transform-origin: 0% 0%;
          transform-origin: 0% 0%;
}

.cards_right{
	display: flex;
	align-items: center;
	justify-content: center;
}

.cards_right text{
   display: block;
   font-size: 30rpx;
   width: 30rpx;
   color: #fff;
}

.reduced .reduced_title{
	color: #ff3333;
	font-size: 32rpx;
	margin-bottom: 12rpx;
}
