page{
    background: #f7f7f7;
}

.pay_num{
    height: 90rpx;
    display: flex;
    background: #fff;
    padding:0 20rpx;
    line-height: 90rpx;
}

.pay_num input{
    flex: 1;
    display: block;
    width: 100%;
    height: 100%;
}

.tip{
    font-size: 28rpx;
    color: #999;
    line-height: 80rpx;
    padding:0 20rpx;
}

.pay_type{
    padding:20rpx;
    background: #fff;
}

.pay_money{
    width: 700rpx;
    margin:100rpx auto;
    background: #ff3333;
    color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
}